<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:p="urn:import:ca.nanometrics.gflot.client"
             xmlns:c="urn:import:com.google.gwt.user.cellview.client">

    <ui:style>
        .container {
            margin: 60px 10px 10px 10px;
        }

        .hoverPoint {
            margin-top: 10px;
            margin-bottom: 5px;
        }

        .plotPanel {
            margin: 5px;
        }
    </ui:style>

    <ui:with field='res' type='com.griddynamics.jagger.webclient.client.resources.Resources' />

    <g:TabLayoutPanel barHeight="2.5" barUnit="EM" addStyleNames="{style.container}">
        <g:tab>
            <g:header>Trends</g:header>
            <g:SplitLayoutPanel>
                <g:center>
                    <g:HTMLPanel addStyleNames="{style.plotPanel}">
                        <p:SimplePlot ui:field="plot" width="50%" height="50%" />

                        <g:Label ui:field="hoverPoint" addStyleNames='{style.hoverPoint}' />

                        <g:Label ui:field="cursorPosition" />
                    </g:HTMLPanel>
                </g:center>
                <g:south size="200">
                    <g:SplitLayoutPanel>
                        <g:west size="600">
                            <g:DockLayoutPanel>
                                <g:center>
                                    <c:DataGrid ui:field="sessionsDataGrid" width="100%" title="Sessions"/>
                                </g:center>
                                <g:south size="30">
                                    <g:HTMLPanel>
                                        <table width="100%">
                                            <tr>
                                                <td align="center"><c:SimplePager ui:field="sessionsPager"/></td>
                                            </tr>
                                        </table>
                                    </g:HTMLPanel>
                                </g:south>
                            </g:DockLayoutPanel>
                        </g:west>
                        <g:center>
                            <g:HTMLPanel>
                                <g:Label ui:field="list"/>
                            </g:HTMLPanel>
                        </g:center>
                    </g:SplitLayoutPanel>
                </g:south>
            </g:SplitLayoutPanel>
        </g:tab>

        <g:tab>
            <g:header>View Results</g:header>
            <c:CellTree title="Task Details" ui:field="taskDetailsTree"/>
        </g:tab>
    </g:TabLayoutPanel>
</ui:UiBinder>