<beans
        xmlns:jgr="http://www.griddynamics.com/schema/jagger"
        xmlns="http://www.springframework.org/schema/beans"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.griddynamics.com/schema/jagger
        http://www.griddynamics.com/schema/jagger-workload.xsd
        http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd"
        >

    <jgr:workload id="workload">

         <jgr:queryPoolScenario>
             <jgr:customInvoker class="com.griddynamics.jagger.invoker.hessian.HessianInvoker"/>
             <jgr:queryProvider/>
             <jgr:loadBalancer/>
         </jgr:queryPoolScenario>

        <jgr:metrics>
            <jgr:metric type="duration"/>
            <jgr:metric type="custom" calculator=""/>
            <jgr:validator type="NotNull"/>
        </jgr:metrics>
    </jgr:workload>

    <jgr:httpScenario id="httpScenario">
        <jgr:endpoint>http://google.com</jgr:endpoint>

        <jgr:httpQuery method="GET">
            <jgr:methodParams>
                <entry key="asdf" value="sdf"/>
            </jgr:methodParams>
        </jgr:httpQuery>
    </jgr:httpScenario>

</beans>
