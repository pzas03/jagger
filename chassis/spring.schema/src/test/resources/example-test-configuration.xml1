<beans
        xmlns:jgr1="http://www.griddynamics.com/schema/jagger-configuration"
        xmlns:jgr="http://www.griddynamics.com/schema/jagger-user"
        xmlns="http://www.springframework.org/schema/beans"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="
        http://www.griddynamics.com/schema/jagger-configuration
        http://www.griddynamics.com/schema/jagger-configuration.xsd
        http://www.griddynamics.com/schema/jagger-user
        http://www.griddynamics.com/schema/jagger-user.xsd
        http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd"
        >

    <jgr1:configuration id="config1">

        <jgr1:test-plan ref="test-plan-1"/>

        <jgr1:session-executionListeners id="sel2">
            <!---->
        </jgr1:session-executionListeners>

        <jgr1:task-executionListeners id="tel2">
            <jgr1:task-listener ref="basicAggregator"/>
            <jgr1:task-listener ref="basicSessionCollector"/>
        </jgr1:task-executionListeners>

    </jgr1:configuration>

    <jgr1:configuration id="config2">

        <jgr1:test-plan id="test-plan-2">
            <ref local="test1"/>
            <ref local="test2"/>
        </jgr1:test-plan>

        <jgr1:session-executionListeners>
            <jgr1:session-listener ref="basicSessionCollector"/>
            <jgr1:session-listener ref="basicAggregator"/>
        </jgr1:session-executionListeners>

        <jgr1:task-executionListeners>
            <!---->
        </jgr1:task-executionListeners>

    </jgr1:configuration>

    <jgr:test-plan id="test-plan-1">
        <ref local="test1"/>
        <ref local="test2"/>
    </jgr:test-plan>

    <jgr:test id="test1" name="user-test" duration="200">
        <jgr:task id="t3" name="3-groups-50-50-50" sample="1000" delay="0" bean="sleep5msServiceScenario" >
            <jgr:user id="u2" count="50" startCount="50" startIn="0" startBy="0" life="2h"/>
            <jgr:user id="u3" count="50" startCount="50" startIn="0" startBy="0" life="2h"/>
            <jgr:user id="u4" count="50" startCount="50" startIn="0" startBy="0" life="2h"/>
        </jgr:task>
        <jgr:task id="t4" name="virtual-user-10" sample="1000" delay="0" bean="sleep5msServiceScenario">
            <jgr:virtual-user id="vu1" count="10" tickInterval="10"/>
        </jgr:task>
    </jgr:test>

    <jgr:test id="test2" name="tps-test" duration="200">
        <jgr:task id="t5" name="tps-test" sample="1000" delay="0" bean="sleep50msServiceScenario">
            <jgr:tps id="tps1" value="10"/>
        </jgr:task>
    </jgr:test>

    <jgr:test id="test3" name="invocation-test" duration="200" >
        <jgr:task id="t6" name="invocation-task" sample="1000" delay="0" bean="sleep50msServiceScenario">
            <jgr:invocation id="invocation1" exactcount ="1" threads="10"/>
        </jgr:task>
    </jgr:test>

    <!--This beans will be in different files-->

            <bean id="basicSessionCollector" class="ExampleTestListener">
            </bean>

            <bean id="basicAggregator" class="ExampleTestListener">
            </bean>

            <bean id="e1MasterCollector" class="ExampleTestListener">
            </bean>

            <bean id="e1ScenarioAggregator" class="ExampleTestListener">
            </bean>

            <bean id="monitoringAggregator" class="ExampleTestListener">
            </bean>

            <bean id="durationLogProcessor" class="ExampleTestListener">
            </bean>

            <bean id="sleep5msServiceScenario" class="com.griddynamics.jagger.engine.e1.scenario.WorkloadTask">
            </bean>

            <bean id="sleep50msServiceScenario" class="com.griddynamics.jagger.engine.e1.scenario.WorkloadTask">
            </bean>

</beans>
