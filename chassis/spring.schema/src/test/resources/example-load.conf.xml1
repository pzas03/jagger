<beans
        xmlns:jgr="http://www.griddynamics.com/schema/jagger"
        xmlns="http://www.springframework.org/schema/beans"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.griddynamics.com/schema/jagger
        http://www.griddynamics.com/schema/jagger.xsd
        http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd"
        >

    <jgr:test id="test-threads" testDescription="descr">
        <jgr:load xsi:type="jgr:load-threads" count="10" delay="1000"/>
        <jgr:termination xsi:type="jgr:termination-background"/>
    </jgr:test>

    <jgr:test id="test-user-group" testDescription="descr">
        <jgr:load xsi:type="jgr:load-user-group" count="10" startBy="1" startCount="2" startIn="3" life="2h"/>
        <jgr:termination xsi:type="jgr:termination-duration" duration="10m"/>
    </jgr:test>

    <jgr:test id="test-user-groups" testDescription="descr">
        <jgr:load xsi:type="jgr:load-user-groups">
            <jgr:user count="10" startCount="5" startIn="6" startBy="7" life="1h"/>
            <jgr:user count="20" startCount="10" startIn="12" startBy="14" life="2h"/>
        </jgr:load>
        <jgr:termination xsi:type="jgr:termination-iterations" iterations="10000"/>
    </jgr:test>

   <jgr:test id="test-invocation-1" testDescription="descr">
        <jgr:load xsi:type="jgr:load-invocation" exactcount="100" threads="1" tickInterval="1000" delay="100" period="15m"/>
        <jgr:termination xsi:type="jgr:termination-background"/>
    </jgr:test>

     <jgr:test id="test-invocation-2" testDescription="descr">
         <jgr:load xsi:type="jgr:load-invocation" exactcount="50" threads="2" tickInterval="500"/>
         <jgr:termination xsi:type="jgr:termination-background"/>
     </jgr:test>

    <jgr:test id="test-tps" testDescription="descr">
        <jgr:load xsi:type="jgr:load-tps" value="100"/>
        <jgr:termination xsi:type="jgr:termination-iterations" iterations="255" maxDuration="2h"/>
    </jgr:test>

    <jgr:test id="test-rump-up" testDescription="descr">
        <jgr:load xsi:type="jgr:load-tps" value="100" warmUpTime="10s"/>
        <jgr:termination xsi:type="jgr:termination-iterations" iterations="255" maxDuration="2h"/>
    </jgr:test>

    <jgr:test id="test-rps" testDescription="descr">
        <jgr:load xsi:type="jgr:load-rps" value="100"/>
        <jgr:termination xsi:type="jgr:termination-iterations" iterations="255" maxDuration="2h"/>
    </jgr:test>

    <jgr:test-description id="descr" calibration="false"/>
</beans>
