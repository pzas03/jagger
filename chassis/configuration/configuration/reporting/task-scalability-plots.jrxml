<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports http://jasperreports.sourceforge.net/xsd/jasperreport.xsd"
              name="LatencyReport" pageWidth="595" pageHeight="842" orientation="Landscape" columnWidth="550"
              leftMargin="0" rightMargin="0" topMargin="0" bottomMargin="0">
    <property name="ireport.zoom" value="1.0"/>
    <property name="ireport.x" value="0"/>
    <property name="ireport.y" value="0"/>
    <template class="java.io.InputStream">
        <![CDATA[$P{context}.getResource("configuration/reporting/styles/default-styles.xml")]]></template>
    <parameter name="context" class="com.griddynamics.jagger.reporting.ReportingContext"/>
    <field name="taskName" class="java.lang.String"/>
    <field name="throughputPlot" class="java.awt.Image"/>
    <field name="latencyPlot" class="java.awt.Image"/>
    <title>
        <band height="40" splitType="Prevent">
            <rectangle>
                <reportElement x="0" y="0" width="550" height="20" backcolor="#AAE600"/>
                <graphicElement>
                    <pen lineWidth="0.0" lineStyle="Solid"/>
                </graphicElement>
            </rectangle>
            <staticText>
                <reportElement style="Header_Bold" positionType="Float" x="0" y="0" width="550" height="20"
                               forecolor="#336600"/>
                <textElement textAlignment="Center" verticalAlignment="Middle"/>
                <text><![CDATA[Task Scalability Plots (E1 Engine)]]></text>
            </staticText>
        </band>
    </title>
    <detail>
        <band height="530" splitType="Stretch">
            <rectangle>
                <reportElement x="0" y="0" width="550" height="15" backcolor="#D7FFB0"/>
                <graphicElement>
                    <pen lineWidth="0.0" lineStyle="Solid"/>
                </graphicElement>
            </rectangle>
            <textField isStretchWithOverflow="true">
                <reportElement style="Header_Bold" x="0" y="0" width="550" height="15" forecolor="#000000"/>
                <textElement textAlignment="Center" verticalAlignment="Middle"/>
                <textFieldExpression><![CDATA[$F{taskName}]]></textFieldExpression>
            </textField>
            <image scaleImage="RetainShape" hAlign="Center" isUsingCache="true" isLazy="true">
                <reportElement x="0" y="25" width="550" height="250"/>
                <imageExpression class="java.awt.Image"><![CDATA[$F{throughputPlot}]]></imageExpression>
            </image>
            <image scaleImage="RetainShape" hAlign="Center" isUsingCache="true" isLazy="true">
                <reportElement x="0" y="275" width="550" height="250"/>
                <imageExpression class="java.awt.Image"><![CDATA[$F{latencyPlot}]]></imageExpression>
            </image>
        </band>
    </detail>
</jasperReport>
