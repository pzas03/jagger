<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean lazy-init="true" id="storageServerLauncher" class="com.griddynamics.jagger.storage.StorageServerLauncher">
        <property name="attendantServers">
            <list>
                <ref bean="storageServer"/>
            </list>
        </property>
    </bean>

    <bean id="hdfsStorageServer" class="com.griddynamics.jagger.storage.fs.hdfs.HDFSNamenodeServer"
          init-method="start" destroy-method="shutdown" lazy-init="true">
        <property name="startupProperties"
                  value="#{propertiesResolverRegistry.resolve('configuration/master/hdfs/namenode.properties')} "/>
    </bean>

    <bean id="localFileStorageServer" class="com.griddynamics.jagger.StubServer" lazy-init="true"/>

    <alias name="${chassis.log.storage.bean}Server" alias="storageServer"/>

</beans>
