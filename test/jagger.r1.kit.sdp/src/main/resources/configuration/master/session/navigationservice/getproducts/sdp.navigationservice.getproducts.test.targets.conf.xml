<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="getProductsNavigationServiceTestTargetAbstractWorkload" abstract="true"
          parent="sdpPerfTestAbstractWorkload">
        <property name="collectors">
            <list>
                <ref bean="durationCollector"/>
                <ref bean="informationCollector"/>
                <ref bean="diagnosticCollector"/>
                <bean class="com.griddynamics.jagger.engine.e1.collector.ValidationCollectorProvider">
                    <property name="validator">
                        <bean class="com.griddynamics.jagger.engine.e1.scenario.ReflectionProvider">
                            <property name="clazz"
                                      value="com.griddynamics.jagger.engine.e1.collector.NotNullResponseValidator"/>
                        </bean>
                    </property>
                </bean>
                <bean id="validationCollectorProvider"
                      class="com.griddynamics.jagger.engine.e1.collector.ValidationCollectorProvider">
                    <property name="validator">
                        <bean class="com.griddynamics.jagger.engine.e1.collector.ConsistencyValidatorProvider">
                            <property name="resultEq" ref="listNavigationProductDTOEq"/>
                        </bean>
                    </property>
                </bean>
            </list>
        </property>
    </bean>

    <bean id="getProductsNavigationService" parent="getProductsNavigationServiceTestTargetAbstractWorkload">
        <property name="name" value="[navigation-service]-getProducts-hessian"/>
        <property name="version" value="1"/>
        <property name="scenarioFactory" ref="getProductsNavigationServiceScenario"/>
    </bean>

    <bean id="getProductsWithMediaNavigationService" parent="getProductsNavigationServiceTestTargetAbstractWorkload">
        <property name="name" value="[navigation-service]-getProductsWithMedia-hessian"/>
        <property name="version" value="1"/>
        <property name="scenarioFactory" ref="getProductsWithMediaNavigationServiceScenario"/>
    </bean>

    <bean id="getProductsWithoutMediaNavigationService" parent="getProductsNavigationServiceTestTargetAbstractWorkload">
        <property name="name" value="[navigation-service]-getProductsWithoutMedia-hessian"/>
        <property name="version" value="1"/>
        <property name="scenarioFactory" ref="getProductsWithoutMediaNavigationServiceScenario"/>
    </bean>

</beans>