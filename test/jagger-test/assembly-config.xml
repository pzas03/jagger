<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">

    <id>full</id>

    <formats>
        <format>zip</format>
        <format>dir</format>
    </formats>

    <fileSets>
        <fileSet>
            <directory>${basedir}/src/main/resources/configuration</directory>
            <outputDirectory>configuration</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${basedir}/src/main/resources/profiles</directory>
            <outputDirectory>profiles</outputDirectory>
        </fileSet>
    </fileSets>

    <dependencySets>
        <dependencySet>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>com.griddynamics.jagger:jagger-distribution:zip:full</include>
            </includes>
            <unpack>true</unpack>
        </dependencySet>
        <dependencySet>
            <outputDirectory>lib</outputDirectory>
            <includes>
                <include>*:*:jar</include>
            </includes>
            <excludes>
                <exclude>com.griddynamics.jagger:*</exclude>
            </excludes>
        </dependencySet>
    </dependencySets>
</assembly>
